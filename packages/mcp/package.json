{
  "name": "@spectrum-charts/mcp",
  "version": "1.27.0",
  "description": "MCP Server for React Spectrum Charts documentation",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "spectrum-charts-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/react-spectrum-charts",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/adobe/react-spectrum-charts/tree/main/packages/mcp",
  "bugs": {
    "url": "https://github.com/adobe/react-spectrum-charts/issues"
  },
  "scripts": {
    "build": "tsc && node scripts/build-docs.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "dev": "yarn build && node dist/index.js",
    "test": "cross-env TZ=UTC BABEL_ENV=test jest --config ../../jest.config.js --testPathPattern=packages/mcp",
    "prepublishOnly": "yarn build",
    "publish-package": "npm publish --access public"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "react-spectrum-charts",
    "chart-generation",
    "claude",
    "ai",
    "adobe",
    "spectrum"
  ],
  "author": "Adobe",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "typescript": "^5.4.5"
  }
}
