{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react-jsx",
    "lib": ["ESNext", "ES5", "ES6", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "paths": {
      "@react-spectrum-charts/*": ["packages/react-spectrum-charts/src/*"],
      "@vega-spec-builder/*": ["packages/vega-spec-builder/src/*"]
    }
  },
  "include": ["packages", "packages/constants/webpack.config.js"],
  "exclude": ["node_modules", "dist", "dist-storybook"]
}
